rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Archivos efímeros - cualquiera puede leer/escribir, se borran automáticamente
    match /ephemeral/{fileName} {
      allow read: if true;
      allow write: if request.resource.size < 10 * 1024 * 1024; // Max 10MB
      allow delete: if true; // Permitir eliminación para cleanup
    }
  }
}
